<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="comApp.account.AccountSettingsPage"
             Title="AccountSettingsPage">

    <StackLayout VerticalOptions="Start" HorizontalOptions="FillAndExpand" Padding="20">

        <Label Text="{Binding Name}"
               FontSize="Large"
               Margin="0,0,0,10"
               HorizontalOptions="Center" />

        <!-- Bind the Text property to the Bio property of the User -->
        <Label Text="{Binding Bio}"
               FontSize="Medium"
               Margin="0,0,0,20"
               HorizontalOptions="Center" />

        <Button Text="Edit"
                Clicked="OnEditClicked"
                Style="{StaticResource GreyButtonStyle}"
                Margin="0, 0, 0, 10"
                HorizontalOptions="Center"/>

        <Button Text="Logout"
                BackgroundColor="Transparent"
                TextColor="Red"
                FontSize="24"
                Margin="0,30,0,200"
                HorizontalOptions="Center"
                VerticalOptions="End" 
                Clicked="OnLogoutButtonClicked"/>
    </StackLayout>
</ContentPage>
